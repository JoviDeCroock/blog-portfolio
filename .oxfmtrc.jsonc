{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  // Matching biome.json formatter config
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "ignorePatterns": ["dist", "node_modules"]
}
