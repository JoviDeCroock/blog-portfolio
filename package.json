{
 "name": "portfolio",
 "type": "module",
 "private": true,
 "author": "Jovi De Croock",
 "description": "My own portfolio",
 "homepage": "https://jovidecroock.com/",
 "license": "MIT",
 "scripts": {
  "prepare": "husky install",
  "dev": "vite",
  "build": "pnpm run generate",
  "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
  "generate": "vite build --outDir dist && yarn build:server && node prerender"
 },
 "dependencies": {
  "@mdx-js/rollup": "^2.3.0",
  "goober": "2.1.12",
  "hoofd": "^1.5.2",
  "preact": "^10.13.0",
  "preact-iso": "^2.3.0",
  "preact-render-to-string": "^5.2.6",
  "preact-ssr-prepass": "^1.2.0",
  "rehype-highlight": "^5.0.2"
 },
 "devDependencies": {
  "@preact/preset-vite": "^2.5.0",
  "husky": "^7.0.4",
  "lint-staged": "^12.3.3",
  "prettier": "^2.5.1",
  "typescript": "^4.8.2",
  "vite": "^4.1.4"
 },
 "lint-staged": {
  "src/**/.tsx": [
   "prettier --write"
  ],
  "src/**/.ts": [
   "prettier --write"
  ],
  "src/**/.mdx": [
   "prettier --write"
  ]
 },
 "husky": {
  "hooks": {
   "pre-commit": "lint-staged"
  }
 }
}
