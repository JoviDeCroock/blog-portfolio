{
 "name": "portfolio",
 "type": "module",
 "private": true,
 "author": "Jovi De Croock",
 "description": "My own portfolio",
 "homepage": "https://jovidecroock.com/",
 "license": "MIT",
 "packageManager": "pnpm@8.6.1",
 "scripts": {
  "prepare": "husky install",
  "dev": "vite",
  "build": "pnpm run generate",
  "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
  "generate": "vite build --outDir dist && pnpm build:server && node prerender"
 },
 "dependencies": {
  "@mdx-js/rollup": "^2.3.0",
  "goober": "2.1.12",
  "hoofd": "^1.5.2",
  "preact": "^10.13.2",
  "preact-iso": "^2.3.1",
  "preact-render-to-string": "^6.0.2",
  "preact-ssr-prepass": "^1.2.0",
  "rehype-highlight": "^6.0.0"
 },
 "devDependencies": {
  "@preact/preset-vite": "^2.5.0",
  "@types/react": "^18.2.12",
  "husky": "^8.0.3",
  "lint-staged": "^13.2.0",
  "prettier": "^2.8.7",
  "typescript": "^5.0.0",
  "vite": "^4.2.1"
 },
 "lint-staged": {
  "src/**/.tsx": [
   "prettier --write"
  ],
  "src/**/.ts": [
   "prettier --write"
  ],
  "src/**/.mdx": [
   "prettier --write"
  ]
 },
 "husky": {
  "hooks": {
   "pre-commit": "lint-staged"
  }
 }
}
