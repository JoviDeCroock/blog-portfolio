{
 "name": "portfolio",
 "type": "module",
 "private": true,
 "author": "Jovi De Croock",
 "description": "My own portfolio",
 "homepage": "https://jovidecroock.com/",
 "license": "MIT",
 "packageManager": "pnpm@8.6.7",
 "scripts": {
  "prepare": "husky install",
  "dev": "vite",
  "build": "pnpm run generate",
  "build:server": "vite build --ssr src/entry-server.tsx --outDir dist/server",
  "generate": "vite build --outDir dist && pnpm build:server && node prerender"
 },
 "dependencies": {
  "@mdx-js/rollup": "^3.0.0",
  "goober": "2.1.13",
  "hoofd": "^1.7.1",
  "preact": "^10.18.2",
  "preact-iso": "^2.3.2",
  "preact-render-to-string": "^6.3.1",
  "preact-ssr-prepass": "^1.2.1",
  "rehype-highlight": "^7.0.0"
 },
 "devDependencies": {
  "@preact/preset-vite": "^2.7.0",
  "@types/react": "^18.2.46",
  "husky": "^8.0.3",
  "lint-staged": "^15.0.2",
  "prettier": "^3.0.3",
  "typescript": "^5.3.3",
  "vite": "^5.0.0"
 },
 "lint-staged": {
  "src/**/.{ts,tsx,mdx}": [
   "prettier --write"
  ]
 },
 "husky": {
  "hooks": {
   "pre-commit": "lint-staged"
  }
 }
}
